[client]
port      = 3306
socket    = /var/vcap/sys/run/mysqld/mysqld.sock

[mysqld_safe]
socket    = /var/vcap/sys/run/mysqld/mysqld.sock
nice      = 0
log-error = <%= log_file %>

[mysqld]
collation_server        = utf8_unicode_ci
character_set_server    = utf8
user    = vcap
pid-file  = /var/vcap/sys/run/mysqld/mysqld.pid
socket    = /var/vcap/sys/run/mysqld/mysqld.sock
port      = 3306
basedir   = /usr
datadir   = <%= mysql_data_dir %>
tmpdir    = <%= mysql_tmp_dir %>
language  = /var/vcap/packages/mysql/share/mysql/english
skip-external-locking
fast_index_creation = false
<% if max_heap_table_size %>
maximum-max_heap_table_size = <%= max_heap_table_size %>
max_heap_table_size         = <%= max_heap_table_size %>
<% end %>

init-file = /var/vcap/jobs/mysql_node_ng/config/mysql_init

<% if micro %>
bind-address            = 127.0.0.1
<% end %>
key_buffer              = <%= production ? '3276M' : '16M' %>
innodb_buffer_pool_size = <%= production ? '3276M' : '256M' %>
max_allowed_packet      = 16M
thread_stack            = 256K
thread_cache_size       = <%= production ? 128 : 8 %>
thread_concurrency      = <%= production ? 8 : 2 %>
max_connections         = <%= production ? 512 : 16 %>
table_cache             = <%= production ? 2048 : 256 %>
myisam-recover          = BACKUP
query_cache_limit       = 1M
query_cache_size        = <%= production ? '128M' : '16M' %>
expire_logs_days        = 10
max_binlog_size         = 100M

[mysqldump]
quick
quote-names
max_allowed_packet  = 16M

[mysql]

[isamchk]
key_buffer    = 16M
